@model TestService.Models.ProductsCategory

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center mt-3 mb-2" style="color:#020240;margin-left:180px">Edit Product Category</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProductsCategoryId)

            <div class="form-group">
                <i style="color:#020240">
                    @Html.LabelFor(model => model.categoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                </i>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-center">
                    <input style="width:300px" type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div class="text-center" style="margin-left:200px">
        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-info mb-2" })
    </div>
</div>